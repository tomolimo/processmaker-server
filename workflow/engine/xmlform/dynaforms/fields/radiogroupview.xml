<?xml version="1.0" encoding="UTF-8"?>
<dynaForm name="radiogroupview" type="xmlform" width="100%">
<A type="hidden"/>
<TYPE type="hidden"/>
<XMLNODE_NAME type="text" validate="Field">
  <en>Field name</en>
</XMLNODE_NAME>

<LABEL type="text" maxlength="255" size="50">
  <en>Label</en>
</LABEL>

<REQUIRED type="checkbox" falseValue="0" value="1" defaultvalue="0">
  <en>Required</en>
</REQUIRED>
<DEFAULTVALUE type="text" maxlength="50" size="30" defaultvalue="">
  <en>Default Value</en>
</DEFAULTVALUE>

<SUBTITLE type="title" enableHTML="1">
  <en>Appearance</en>
</SUBTITLE>


<ENABLEHTML type="checkbox" falseValue="0" value="1" defaultvalue="0">
  <en>EnableHtml</en>
</ENABLEHTML>


<ACCEPT type="button" onclick="fieldsSave( this.form );">
  <en>Save</en>
</ACCEPT>

<js type="javascript"><![CDATA[
getField("XMLNODE_NAME").focus();
getField("XMLNODE_NAME").select();
]]></js>
</dynaForm>  